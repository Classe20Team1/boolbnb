/* Login e Register */
.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 2em;
  padding-bottom: 4.5em;
}
.login-form-container {
  width: 57%;
  border: 1px solid black;
}

.login-form-header {
  background-color: #DCDCDC;
  padding: 1em 2em;
  font-size: .9em;
  border-bottom: 1px solid #696969;
}

.login-card {
  display: flex;
  justify-content: center;
  font-size: .9em;
  width: 100%;
  padding: 2em 0;
}

.login-form-element {
  width: 400px;
  padding: 1em;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.login-form-element label {
  width: 30%;
  text-align: right;
  margin-right: 1.5em;
}


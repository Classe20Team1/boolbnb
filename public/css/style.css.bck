.login-form-element select {
  width: 70%;
  padding: .5em 1em;
}

.login-form-btn {
  width: 400px;
  padding: 1em;
  padding-left: 140px;
}
.login-form-btn input.form-check-input {
  margin-right: .5em;
}

.login-form-btn > div:not(:last-child){
  margin-bottom: 1em;
}

.login-form-btn button {
  background-color: #FF385C;
  border: 1px solid #FF385C;
  font-size: 1.05em;
  padding: .5em 1em;
  color: white;
  border-radius: .5em;
  margin-right: .5em;
  margin-top: 1em;
}

.login-form-btn button.register-btn {

nav {
  /* border: 1px solid black; */
  /* padding: 2em 3em; */
  display: flex;
  color: white;
  justify-content: space-between;
  /* padding-bottom: 2em; */
  height:100px;
  scroll-behavior: auto;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  background-color: white;;
  /* opacity:0.8; */
}

nav > div {
  /* height:40px; */
}

nav .nav-logo-box {
  /* margin-right: 8em; */
  display: flex;
  align-items: center;
}

nav .nav-logo-box img {
  height: 80px;
  margin-left: 50px;
}

nav .nav-contents {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
}

nav .nav-contents ul {
  list-style: none;
  /* width: 100%; */
}

nav .nav-contents ul li {
  display: inline-block;
  position: relative;
  margin-right: 2.5em;
  padding: .4em;
  cursor: pointer;
}

nav .nav-contents ul li:hover {
  opacity: .8;
}

nav .nav-contents ul li:hover::after {
  content: "";
  position: absolute;
  width: 2em;
  bottom: 0%;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  border: 1px solid white;
}

nav .nav-user {
  display: flex;
  margin-right: 50px;
  align-items: center;
  position: relative;
}

.nav-right-list-1 {
  list-style: none;
  font-size: .9em;
  margin-right: .3em;
}

.nav-right-list-1 li {
  display: inline-block;
  border-radius: 2em;
  padding: .5em 1em;
  cursor: pointer;
}
.nav-right-list-1 li:hover {
  background-color: #696969;
}

.nav-right-list-2 {
  list-style: none;
  color: #696969;
  display: flex;
}
.nav-right-list-2 li {
  background-color: white;
  display: flex;
  align-items: center;
  padding: .5em .8em;
  border-radius: 2em;
  cursor: pointer;
}
.nav-right-list-2 li:hover {
  filter:brightness(95%);
}

.nav-right-list-2 li a {
  text-decoration: none;
  font-weight: bold;
}
.nav-right-list-2 li a:visited{
  color: black;
}

.mg-nav-1 {
  margin-right: .5em;
}

.nav-right-list-2 li.logged:hover{
  position: relative;
}

.nav-right-list-2 li.logged:hover .nav-dropdown {
  display: block;

}

.nav-dropdown {
  width: 130px;
  font-weight: bold;
  background-color: white;
  border:1px solid pink;
  position: absolute;
  top:33px;
  right:0px;
  /* top:60px; */

  /* bottom: -207%; */
  /* right: 0%; */
  display: none;
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
  /* border: 1px solid black; */
}


.nav-dropdown ul {
  list-style: none;
}

.nav-dropdown ul li {
  padding: .5em;
  border-radius: 0;
}

.dropdown-helper {
  padding-bottom: 1.5em;
  border-bottom: 1px solid black;
}

.nav-right-list-2 .bars-icon {
  margin-right: .6em;
}
.nav-right-list-2 .user-icon {
  font-size: 1.8em;

}

